<!-- 認証メールの再送信画面 -->
<% provide(:title, "confirmations") %>
<div class="background-color">
<%= render "devise/shared/error_messages", resource: resource %>
  <div class="header-space"></div>
  <div class="container">
    <div class="main-color main-form col-lg-7">
      <h2 class="form-heading font-weight-bold">アカウント認証メールを再送信する</h2>

      <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>

        <div class="form-email form-group font-weight-bold">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "認証メールを送信する", class: "btn btn-success btn-lg btn-block" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
  <div class="header-space"></div>
</div>
