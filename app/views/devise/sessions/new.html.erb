<% provide(:title, "log in") %>
<div class="background-color">
  <h2 class="font-color form-heading">ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field form-email">
      <%= f.label "メールアドレス(必須)" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field-area" %>
    </div>

    <div class="field form-password">
      <%= f.label "パスワード(必須)" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "field-area" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field btn-remember">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン", class: "submit-btn" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
