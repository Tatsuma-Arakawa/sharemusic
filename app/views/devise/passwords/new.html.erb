<% provide(:title, "new") %>
<div class="background-color">
<div class="header-space"></div>
  <div class="container">
    <div class="main-color main-form col-lg-7">
      <h2 class="form-heading font-weight-bold">パスワードをお忘れですか？</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-email form-group font-weight-bold">
          <%= f.label "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "確認用メールを送信する", class: "btn btn-success btn-lg btn-block" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
  <div class="header-space"></div>
</div>