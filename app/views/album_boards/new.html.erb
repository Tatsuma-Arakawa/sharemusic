<% provide(:title, "create") %>
<div class="background-color">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <%= form_with(model: @albumboard, local: true) do |f| %>
          <%= f.label :アルバム名, class: "album-create-name" %>
          <%= f.text_field :albums, class:"form-control album-create-form" %>
        <div class="text-center album-create-btn">
          <p>アルバム名は正しいですか？</p>
          <%= f.submit 'レビューページを作成する', class:"btn album-create-submit" %>
        </div>
        <%= hidden_field_tag :album_icon, @album_icon %>
        <% end %>
      </div>
    </div>
  </div>
</div>