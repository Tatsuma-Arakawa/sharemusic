<% provide(:title, "メッセージ") %>
<div class="background-color">
  <div class="container">
    <div class="room-users">
      <h5 class="font-weight-bold">メッセージルーム</h5>
      <% @entries.each do |e| %>
        <p><strong><a href="/users/<%= e.user.id %>", class="text-dark"><%= image_tag e.user.image.url, :size =>'50x50', class: "message-users" %><%= e.user.username%></a></strong></p>
      <% end %>
    </div>
    <hr>
    <% if @messages.present? %>
      <% @messages.each do |m| %>
        <div class="row">
          <div class="col-lg-12">
            <%= image_tag m.user.image.url, :size =>'30x30', class: "message-user" %>
            <%= m.user.username %>
          </div>
          <div class="col-lg-12">
            <div class="balloon2-top">
              <p><%=simple_format(m.content)%></p>
            </div>
            <hr>
          </div>
        </div>
      <% end %>
    <% end %>
    <%= render 'form' %>
  </div>
</div>

<script>
  setTimeout(function() {
      window.scroll(0,$(document).height());
  },0);
</script>